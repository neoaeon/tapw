<h1>Listing pois</h1>

<table>
  <tr>
    <th>Uid</th>
    <th>Name</th>
    <th>Description</th>
    <th>Poi cat</th>
    <th>Lattitude</th>
    <th>Longitude</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pois.each do |poi| %>
  <tr>
    <td><%= poi.uid %></td>
    <td><%= poi.name %></td>
    <td><%= poi.description %></td>
    <td><%= poi.poi_cat %></td>
    <td><%= poi.lattitude %></td>
    <td><%= poi.longitude %></td>
    <td><%= link_to 'Show', poi %></td>
    <td><%= link_to 'Edit', edit_poi_path(poi) %></td>
    <td><%= link_to 'Destroy', poi, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

